@model IEnumerable<QuanLyTTNgoaiNgu.Models.LOPHOC>
@{
    Layout = "_Layout";
    var maKhoaHoc = ViewBag.MaKhoaHoc;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Danh sách lớp học</title>
    <style>
        body {
            margin: 0;
            background: linear-gradient(135deg, #4da0b0, #d39d38);
            height: 100vh;
            
            justify-content: center;
            align-items: center;
            font-family: Arial, sans-serif;
        }

        .box {
            background: #fff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            width: 600px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .list a {
            display: block;
            margin-bottom: 10px;
            padding: 15px;
            background: #ffc107;
            color: #333;
            border-radius: 8px;
            text-decoration: none;
            text-align: center;
            font-weight: bold;
        }

            .list a:hover {
                background: #e0a800;
            }

        .back {
            display: block;
            text-align: center;
            margin-top: 20px;
            color: white;
            background: #17a2b8;
            padding: 12px;
            border-radius: 8px;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="box">
        <h2>Chọn Lớp Học</h2>
        <div class="list">
            @foreach (var lop in Model)
            {
                <a asp-action="XemKetQua" asp-route-lopHocId="@lop.MaLopHoc">@lop.TenLop</a>
            }
        </div>
        <a asp-action="DanhSachKhoaHoc" class="back">⬅ Quay lại chọn khóa học</a>
    </div>
</body>
</html>
