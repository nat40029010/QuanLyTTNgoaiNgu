@model QuanLyTTNgoaiNgu.Models.HOCVIEN

@{
    ViewData["Title"] = "Xóa học viên";
}

<h2>@ViewData["Title"] – @Model.HoTen</h2>

<div class="alert alert-warning">
    Bạn có chắc chắn muốn xóa học viên này không?
</div>

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.HoTen)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.HoTen)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Email)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Email)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.SoDienThoai)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.SoDienThoai)</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MaHocVien" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
