@model QuanLyTTNgoaiNgu.Models.HOCVIEN

@{
    ViewData["Title"] = "Chi tiết học viên";
}

<h2>@ViewData["Title"] – @Model.HoTen</h2>

<div class="card mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.MaHocVien)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.MaHocVien)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.HoTen)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.HoTen)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.NgaySinh)</dt>
            <dd class="col-sm-9">@Model.NgaySinh.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Email)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Email)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.SoDienThoai)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.SoDienThoai)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.DiaChi)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.DiaChi)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.MaTaiKhoan)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.MaTaiKhoan)</dd>
        </dl>
    </div>
</div>

<p>
    <a asp-action="DetailsWithHistory" asp-route-id="@Model.MaHocVien" class="btn btn-info">Xem lịch sử & kết quả</a>
    <a asp-action="Edit" asp-route-id="@Model.MaHocVien" class="btn btn-primary">Sửa hồ sơ</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</p>
