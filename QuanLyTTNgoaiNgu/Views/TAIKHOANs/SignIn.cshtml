@using QuanLyTTNgoaiNgu.Models.ViewModels
@model TAIKHOANViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng nhập | Trung tâm ngoại ngữ</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            margin: 0;
            background: linear-gradient(135deg, #4da0b0, #d39d38);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-box {
            background: #fff;
            border-radius: 10px;
            padding: 40px;
            max-width: 400px;
            width: 100%;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        }

            .login-box h2 {
                text-align: center;
                margin-bottom: 25px;
                color: #333;
            }

        .form-group {
            margin-bottom: 18px;
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 14px;
            border-radius: 8px;
            border: 1px solid #ccc;
            font-size: 16px;
        }

        .btn-login {
            width: 100%;
            background: #ff9933;
            color: white;
            padding: 14px;
            font-size: 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            transition: background 0.3s;
        }

            .btn-login:hover {
                background: #e28525;
            }

        .text-danger {
            color: red;
            font-size: 14px;
        }

        .remember-me {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .remember-me input {
                margin-right: 10px;
            }

        .footer-link {
            text-align: center;
            margin-top: 15px;
        }

            .footer-link a {
                color: #555;
                font-size: 14px;
                text-decoration: none;
            }

                .footer-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="login-box">
        <h2>Đăng nhập hệ thống</h2>

        <form asp-action="SignIn" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="TenDangNhap" placeholder="Tên đăng nhập" />
                <span asp-validation-for="TenDangNhap" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="MatKhau" placeholder="Mật khẩu" type="password" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>

            <div class="remember-me">
                <input asp-for="GhiNho" type="checkbox" />
                <label asp-for="GhiNho">Ghi nhớ đăng nhập</label>
            </div>

            <button type="submit" class="btn-login">Đăng nhập</button>

            <div class="footer-link">
                <a asp-controller="TAIKHOANs" asp-action="QuenMatKhau">Quên mật khẩu?</a>
            </div>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
